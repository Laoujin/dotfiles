{
	"explorer":
	{
		"desc": "Windows Explorer",
		"registry":
		{
			"showThisPCFolders":
			{
				"type": "files",
				"context": "explorer",
				"desc": "Show the Desktop, Documents, Downloads, Music, Pictures and Videos folders below 'This PC'",
				"files": {
					"on": "Explorer\\Explorer_ThisPCFolders_Show.reg",
					"off": "Explorer\\Explorer_ThisPCFolders_Hide.reg"
				},
				"default": "on"
			},
			"showOneDrive":
			{
				"type": "toggle",
				"context": "explorer",
				"requires": "onedrive",
				"desc": "Show OneDrive icon in Navigation pane",
				"hive": "HKEY_CLASSES_ROOT",
				"regPathRaw": "CLSID\\{8E74D236-7F35-4720-B138-1FED0B85EA75}\\ShellFolder",
				"regKey": "Attributes",
				"values": {
					"true": "4034920525",
					"false": "4035969101"
				},
				"default": "true"
			},
			"showHiddenFilesFoldersDrives":
			{
				"type": "toggle",
				"context": "explorer",
				"desc": "Show hidden files in Windows Explorer",
				"hive": "HKEY_CURRENT_USER",
				"regPathRaw": "Software\\Microsoft\\Windows\\CurrentVersion\\Explorer\\Advanced",
				"regKey": "Hidden",
				"values": {
					"true": "0",
					"false": "1"
				},
				"default": "false"
			},
			"showFileExtensions":
			{
				"type": "toggle",
				"context": "explorer",
				"desc": "Show the file extension in file names in Windows Explorer",
				"hive": "HKEY_CURRENT_USER",
				"regPathRaw": "Software\\Microsoft\\Windows\\CurrentVersion\\Explorer\\Advanced",
				"regKey": "HideFileExt",
				"values": {
					"true": "0",
					"false": "1"
				},
				"default": "false"
			},
			"showProtectedOSFiles":
			{
				"type": "toggle",
				"context": "explorer",
				"desc": "Show hidden Operating System files in Windows Explorer",
				"hive": "HKEY_CURRENT_USER",
				"regPathRaw": "Software\\Microsoft\\Windows\\CurrentVersion\\Explorer\\Advanced",
				"regKey": "ShowSuperHidden",
				"values": {
					"true": "1",
					"false": "0"
				},
				"default": "false"
			},
			"showFullPathInTitleBar":
			{
				"type": "toggle",
				"context": "explorer",
				"desc": "Show the full folder path in the Title Bar in Windows Explorer",
				"hive": "HKEY_CURRENT_USER",
				"regPathRaw": "Software\\Microsoft\\Windows\\CurrentVersion\\Explorer\\CabinetState",
				"regKey": "FullPath",
				"values": {
					"true": "1",
					"false": "0"
				},
				"default": "false"
			}
		}
	}
}