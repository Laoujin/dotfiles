{
	"bash":
	{
		"modules":
		{
			"Create-Links":
			[
				{
					"type": "symlink",
					"link": "shells\\.bashrc",
					"to": "<HOME>\\.bashrc"
				}
			]
		}
	},
	"powershell":
	{
		"modules":
		{
			"Install-PS-Modules":
			[
				"PsGet",
				"Posh-Git",
				"PSReadLine"
			],
			"Create-Links":
			[
				{
					"type": "symlink",
					"link": "shells\\Microsoft.PowerShell_profile.ps1",
					"to": "<MYDOCUMENTS>\\WindowsPowerShell\\Microsoft.PowerShell_profile.ps1"
				}
			]
		}
	},
	"modules":
	{
		"Create-Shell-Aliases":
		{
			"aliases":
			[
				{
					"alias": "mike",
					"cd": "c:\\code\\Autohotkey\\MiKe"
				},
				{
					"alias": "code",
					"cd": "c:\\code\\"
				},
				{
					"alias": "dotfiles",
					"cd": "c:\\code\\dotfiles"
				}
			],
			"drives":
			[
				{
					"powershell": "c:\\",
					"bash": "/c/"
				}
			]
		},
		"Create-Links":
		[
			{
				"type": "symlink",
				"link": "shells\\Microsoft.PowerShell_aliases.ps1",
				"to": "<MYDOCUMENTS>\\WindowsPowerShell\\Microsoft.PowerShell_aliases.ps1"
			},
			{
				"type": "symlink",
				"link": "shells\\bash_aliases.sh",
				"to": "<HOME>\\bash_aliases.sh"
			}
		]
	}
}